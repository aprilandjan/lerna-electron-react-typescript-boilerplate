{
  "version": "independent",
  "npmClient": "yarn",
  "packages": ["packages/*"],
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": ["master", "release-*"]
    },
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md", "**/my-ignored-pkg/**"],
      "conventionalCommits": true,
      "message": "chore(release): publish %s"
    }
  }
}
