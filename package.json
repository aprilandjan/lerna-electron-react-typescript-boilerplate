{
  "name": "play-electron",
  "version": "1.0.0",
  "private": true,
  "description": "Electron app built on Lerna, React, Typescript",
  "scripts": {
    "dev": "node ./scripts/dev",
    "build": "node ./scripts/build",
    "start": "lerna exec --scope=app-main yarn start",
    "package": "lerna exec --scope=app-main yarn package",
    "package-linux": "lerna exec --scope=app-main yarn package-linux",
    "package-win": "lerna exec --scope=app-main yarn package-win",
    "package-all": "lerna exec --scope=app-main yarn package-all",
    "package-ci": "lerna exec --scope=app-main yarn package-ci",
    "lint": "eslint . --ext .jsx,.js,.tsx,.ts --format=pretty",
    "lint-fix": "yarn --silent lint --fix; exit 0",
    "lint-styles": "stylelint --ignore-path .eslintignore '**/*.*(css|scss)' --syntax scss",
    "lint-styles-fix": "yarn --silent lint-styles --fix; exit 0",
    "prettify": "prettier --ignore-path .eslintignore '**/*.{js,jsx,json,html,css,less,scss,yml}'",
    "prettify-fix": "yarn --silent prettify --write; exit 0",
    "preinstall": "npx check-npm-client --yarn-only",
    "test": "cross-env NODE_ENV=test BABEL_DISABLE_CACHE=1 jest",
    "test-all": "yarn lint && yarn build && yarn test && yarn build-e2e && yarn test-e2e",
    "test-watch": "yarn test --watch"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["eslint --format=pretty", "prettier --write", "git add"],
    "{*.json,.{babelrc,eslintrc,prettierrc,stylelintrc}}": [
      "prettier --parser json --write",
      "git add"
    ],
    "*.{css,scss}": ["stylelint --syntax scss --fix", "prettier --write", "git add"],
    "*.{html,md,yml}": ["prettier --write", "git add"]
  },
  "license": "MIT",
  "keywords": ["lerna", "electron", "react", "redux", "sass", "typescript"],
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-numeric-separator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/plugin-transform-react-constant-elements": "^7.7.4",
    "@babel/plugin-transform-react-inline-elements": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "chalk": "^3.0.0",
    "check-npm-client": "^1.1.1",
    "confusing-browser-globals": "^1.0.9",
    "cross-env": "^6.0.3",
    "cross-spawn": "^7.0.1",
    "detect-port": "^1.3.0",
    "eslint": "^6.7.2",
    "eslint-formatter-pretty": "^3.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.12.0",
    "rimraf": "^3.0.0",
    "sinon": "^7.5.0",
    "stylelint": "^12.0.0",
    "stylelint-config-prettier": "^8.0.0",
    "stylelint-config-standard": "^19.0.0"
  },
  "browserslist": "electron 1.6",
  "dependencies": {
    "fs-extra": "^8.1.0",
    "lerna": "^3.20.2",
    "typescript": "^3.7.5"
  },
  "devEngines": {
    "node": ">=7.x",
    "npm": ">=4.x",
    "yarn": ">=1.4.3"
  },
  "workspaces": {
    "packages": ["packages/*"],
    "nohoist": [
      "**/electron-builder",
      "**/electron-builder/**",
      "**/electron-webpack",
      "**/electron-webpack/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
