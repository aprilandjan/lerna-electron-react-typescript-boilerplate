{
  "name": "app-main",
  "version": "1.0.0",
  "private": true,
  "author": "aprilandjan",
  "description": "Electron app resources for the Electron app",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "app-main dev",
    "build": "app-main build",
    "start": "app-main start",
    "start:prod": "electron ./dist/main.prod.js",
    "package": "app-bundle --publish never",
    "package-win": "app-bundle --win --x64",
    "package-mac": "app-bundle --mac"
  },
  "license": "MIT",
  "dependencies": {
    "app-common": "1.0.0",
    "devtron": "^1.4.0",
    "electron-debug": "^3.0.1",
    "electron-log": "^4.0.0",
    "electron-updater": "^4.2.0",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.161",
    "app-dev-utils": "^1.0.0",
    "cross-env": "^6.0.3",
    "debug": "^4.1.1",
    "electron": "8.4.1",
    "electron-devtools-installer": "^3.1.1"
  },
  "main": "./dist/main.prod.js",
  "build": {
    "productName": "ElectronReact",
    "appId": "org.my.app",
    "asar": false,
    "files": ["./dist", "node_modules/", "package.json"],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["deb", "rpm", "AppImage"],
      "category": "Development"
    },
    "mac": {
      "target": ["dmg"]
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "play-electron",
      "repo": "play-electron",
      "private": false
    }
  }
}
